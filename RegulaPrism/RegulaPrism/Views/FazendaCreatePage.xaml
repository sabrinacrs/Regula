<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="RegulaPrism.Views.FazendaCreatePage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LabelInformacoesBasicas" Style="{StaticResource label-dados-pessoais}" Text="      Informações Básicas"></Label>
            <StackLayout Padding="10, 20, 10, 10" Spacing="20">
                <Label Text="Nome da Fazenda"></Label>
                <Entry x:Name="Nome"></Entry>
                <Label Text="Hectares"></Label>
                <Entry x:Name="Hectares" Keyboard="Numeric"></Entry>
                <Label Text="Observações"></Label>
                <Entry x:Name="Observacoes"></Entry>
            </StackLayout>
            <StackLayout Padding="40, 20, 40, 20">
                <Button x:Name="Proximo" Text="Salvar" Style="{StaticResource button-save}" Command="{Binding FazendaSaveCommand}"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
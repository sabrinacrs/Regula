<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="RegulaPrism.Views.HomeMasterDetailPage"
                  Title="{Binding Title}">
    <MasterDetailPage.Master>
        <ContentPage Title="Default" BackgroundColor="#8fd08f">
            <StackLayout>
                <ListView x:Name="ItemsMenuLateral" HasUnevenRows="True" ItemsSource="{Binding Itens}" SelectedItem="{Binding SelectedItem}">
                    <!--ItemSelected="ListView_OnItemSelected"-->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="20">
                                    <Label Text="{Binding Titulo}" TextColor="White" Font="Large"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
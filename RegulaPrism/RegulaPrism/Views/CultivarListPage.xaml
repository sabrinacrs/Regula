                        <DataTemplate>
                            <TextCell Text="{Binding Nome}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>-->
  
</ContentPage>
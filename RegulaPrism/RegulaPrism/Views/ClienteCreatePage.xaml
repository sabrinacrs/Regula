<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:utils="clr-namespace:RegulaPrism.Utils"
             x:Class="RegulaPrism.Views.ClienteCreatePage"
             Title="{Binding Title}">
    <StackLayout Padding="40, 20, 40, 0">
        <Label Text="Nome Completo"></Label>
        <Entry x:Name="Nome"/>
        <Label Text="Email"></Label>
        <Entry x:Name="Email" Keyboard="Email">
            <Entry.Behaviors>
                <utils:EmailValidatorBehavior x:Name="emailValidator"></utils:EmailValidatorBehavior>
            </Entry.Behaviors>
        </Entry>
        <Label Text="Login"></Label>
        <Entry x:Name="Login"></Entry>
        <Label Text="Senha"></Label>
        <Entry x:Name="Senha" IsPassword="True"></Entry>
        <Label Text="Confrimar Senha"></Label>
        <Entry x:Name="ConfirmarSenha" IsPassword="True"></Entry>

        <Button x:Name="Salvar" Text="Salvar" Style="{StaticResource button-save}" Command="SalvarCommand"></Button>
    </StackLayout>
</ContentPage>